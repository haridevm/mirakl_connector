                <tr>
                    <th><?= /* @escapeNotVerified */ __('Import Line') ?></th>
                    <td><?= $block->escapeHtml($event->getLine()) ?></td>
                </tr>
            <?php endif?>
            <?php if ($event->getMessage()): ?>
                <tr>
                    <th><?= /* @escapeNotVerified */ __('Error Message') ?></th>
                    <td><?= $block->escapeHtml($event->getMessage()) ?></td>
                </tr>
            <?php endif?>
            <tr>
                <th><?= /* @escapeNotVerified */ __('Created At') ?></th>
                <td><?= /* @escapeNotVerified */ $block->formatDate($event->getCreatedAt(), \IntlDateFormatter::MEDIUM, true) ?></td>
            </tr>
            <tr>
                <th><?= /* @escapeNotVerified */ __('Last Updated At') ?></th>
                <td><?= /* @escapeNotVerified */ $block->formatDate($event->getCreatedAt(), \IntlDateFormatter::MEDIUM, true) ?></td>
            </tr>
            </tbody>
        </table>
    </div>

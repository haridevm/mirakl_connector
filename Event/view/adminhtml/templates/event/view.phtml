use Mirakl\Event\Model\Event;

$event = $block->getEvent();
$types = Event::getTypes();
$actions = Event::getActions();
$statuses = Event::getStatuses();
?>
<section class="admin__page-section">
    <div class="admin__page-section-title">
        <strong class="title"><?= /* @escapeNotVerified */ __('Event Information') ?></strong>
    </div>
    <div class="admin__page-section-content">
        <table class="admin__table-secondary">
            <tbody>
            <tr>
                <th><?= /* @escapeNotVerified */ __('Type') ?></th>
                <td><?= $block->escapeHtml(__($types[$event->getData('type')])) ?></td>
            </tr>
            <tr>
                <th><?= /* @escapeNotVerified */ __('Action') ?></th>
                <td><?= $block->escapeHtml($actions[$event->getData('action')]) ?></td>
            </tr>
            <tr>
                <th><?= /* @escapeNotVerified */ __('Code') ?></th>
                <td><?= $block->escapeHtml($event->getCode()) ?></td>
            </tr>
            <tr>
                <th><?= /* @escapeNotVerified */ __('Status') ?></th>
                <td><p class="report-status"><span class="<?= /* @escapeNotVerified */ $event->getStatusClass() ?>"><span><?= /* @escapeNotVerified */ __(ucwords(str_replace('_', ' ', $statuses[$event->getData('status')]))) ?></span></span></p></td>
            </tr>
            <?php if ($event->getProcessId()): ?>
                <tr>
                    <th><?= /* @escapeNotVerified */ __('Process Id') ?></th>
                    <td><?= $block->escapeHtml($event->getProcessId()) ?></td>
                </tr>
            <?php endif?>
            <?php if ($event->getImportId()): ?>
                <tr>
                    <th><?= /* @escapeNotVerified */ __('Import Id') ?></th>
                    <td><?= $block->escapeHtml($event->getImportId()) ?></td>
                </tr>

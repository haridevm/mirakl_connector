<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mirakl_sync>
            <mcm_products>
                <enable_mcm_products>1</enable_mcm_products>
            </mcm_products>
            <mcm_products_delete>
                <enable>0</enable>
            </mcm_products_delete>
        </mirakl_sync>
        <mirakl_mcm>
            <import_product>
                <enable_mcm>0</enable_mcm>
                <mode>standard</mode>
                <enable_product_import>1</enable_product_import>
                <default_visibility>4</default_visibility> <!-- Catalog, Search -->
                <default_tax_class>0</default_tax_class>
                <auto_enable_product>1</auto_enable_product>
                <last_sync_date/>
            </import_product>
            <import_product_async>
                <enable_mcm>0</enable_mcm>
                <enable_product_import>1</enable_product_import>
                <default_visibility>4</default_visibility>
                <default_tax_class>0</default_tax_class>
                <auto_enable_product>1</auto_enable_product>
                <last_sync_date/>
            </import_product_async>
            <product_import_indexing>
                <enable_indexing_import>0</enable_indexing_import>
                <enable_indexing_import_after>1</enable_indexing_import_after>
            </product_import_indexing>
            <export_product>
                <chunk_size>5000</chunk_size>
            </export_product>
        </mirakl_mcm>
    </default>
</config>
